@model IEnumerable<QLKS_WebMVC.Models.DatPhong>
@{
    ViewData["Title"] = "Danh sách đặt phòng";
}
<div class="container py-4" style="font-family: 'Segoe UI', sans-serif">
    <h2 class="text-primary mb-4">📋 Danh sách đặt phòng</h2>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">➕ Tạo mới</a>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow border-primary h-100">
                    <img src="/images/room-default.jpg" class="card-img-top" alt="room" />
                    <div class="card-body">
                        <h5 class="card-title">Phòng: @item.MaPhong</h5>
                        <p class="card-text">
                            <strong>Khách hàng:</strong> @item.KhachHang?.HoTen <br />
                            <strong>Ngày nhận:</strong> @item.NgayNhan.ToString("dd/MM/yyyy") <br />
                            <strong>Ngày trả:</strong> @item.NgayTra.ToString("dd/MM/yyyy") <br />
                            <strong>Trạng thái:</strong> <span class="badge bg-@(item.TrangThai == "Đã trả" ? "success" : "info")">@item.TrangThai</span>
                        </p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.MaDat" class="btn btn-warning btn-sm">✏ Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.MaDat" class="btn btn-primary btn-sm">🔍 Xem</a>
                        <a asp-action="Delete" asp-route-id="@item.MaDat" class="btn btn-danger btn-sm">🗑 Xoá</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>