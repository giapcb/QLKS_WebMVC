@model QLKS_WebMVC.Models.Phong
@{
    ViewData["Title"] = "Thêm phòng";
    var loaiPhongs = (List<QLKS_WebMVC.Models.LoaiPhong>)ViewBag.LoaiPhongsData;
}

<h1>Thêm Phòng</h1>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="TenPhong" class="control-label"></label>
        <input asp-for="TenPhong" class="form-control" />
        <span asp-validation-for="TenPhong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TrangThai" class="control-label"></label>
        <select asp-for="TrangThai" class="form-control">
            <option>Trống</option>
            <option>Đặt</option>
            <option>Sử dụng</option>
            <option>Bảo trì</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoaiPhongId" class="control-label"></label>
        <select asp-for="LoaiPhongId" class="form-control" id="LoaiPhongId">
            <option value="">-- Chọn loại phòng --</option>
            @foreach (var lp in loaiPhongs)
            {
                <option value="@lp.Id">@lp.TenLoai</option>
            }
        </select>
        <span asp-validation-for="LoaiPhongId" class="text-danger"></span>
    </div>

    <!-- Hình ảnh loại phòng -->
    <div id="imagePreview" class="mt-3">
        <img id="loaiPhongImg" src="" alt="Ảnh loại phòng" style="max-height: 200px; display: none;" />
    </div>

    <button type="submit" class="btn btn-primary">Thêm</button>
</form>

@section Scripts {
    <script>
        const loaiPhongs = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(loaiPhongs));

        document.getElementById('LoaiPhongId').addEventListener('change', function () {
            const selectedId = parseInt(this.value);
            const selectedLoai = loaiPhongs.find(lp => lp.id === selectedId);
            const img = document.getElementById('loaiPhongImg');

            if (selectedLoai && selectedLoai.hinhAnh) {
                img.src = '/images/loaiphongs/' + selectedLoai.hinhAnh; // hoặc đúng đường dẫn ảnh của bạn
                img.style.display = 'block';
            } else {
                img.style.display = 'none';
            }
        });
    </script>
}

