@model IEnumerable<QLKS_WebMVC.Models.KhachHang>
@{
    ViewData["Title"] = "Danh sách khách hàng";
}
<div class="container py-4" style="font-family: 'Segoe UI', sans-serif">
    <h2 class="text-primary mb-4">📋 Danh sách khách hàng</h2>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">➕ Thêm khách hàng</a>
    </div>
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow border-primary h-100">
                    <div class="card-body">
                        <h5 class="card-title">👤 @item.HoTen</h5>
                        <p class="card-text">
                            <strong>SĐT:</strong> @item.SDT <br />
                            <strong>CCCD:</strong> @item.CCCD <br />
                            <strong>Địa chỉ:</strong> @item.DiaChi
                        </p>
                    </div>
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Edit" asp-route-id="@item.MaKH" class="btn btn-warning btn-sm">✏ Sửa</a>
                        <a asp-action="Details" asp-route-id="@item.MaKH" class="btn btn-primary btn-sm">🔍 Xem</a>
                        <a asp-action="Delete" asp-route-id="@item.MaKH" class="btn btn-danger btn-sm">🗑 Xoá</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>