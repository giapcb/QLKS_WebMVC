@model QLKS_WebMVC.Models.KhachHang
@{
    ViewData["Title"] = "Chỉnh sửa khách hàng";
}
<div class="container mt-4" style="font-family: 'Segoe UI', sans-serif">
    <h2 class="text-warning mb-4">✏ Chỉnh sửa khách hàng</h2>
    <form asp-action="Edit">
        <input type="hidden" asp-for="MaKH" />
        <div class="mb-3">
            <label asp-for="HoTen" class="form-label"></label>
            <input asp-for="HoTen" class="form-control" required />
        </div>
        <div class="mb-3">
            <label asp-for="SDT" class="form-label"></label>
            <input asp-for="SDT" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="CCCD" class="form-label"></label>
            <input asp-for="CCCD" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="DiaChi" class="form-label"></label>
            <input asp-for="DiaChi" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">💾 Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">↩ Quay lại</a>
    </form>
</div>