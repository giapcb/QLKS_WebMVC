@model QLKS_WebMVC.Models.LoaiPhong

@{
    ViewData["Title"] = "Chỉnh sửa loại phòng";
}

<h2 class="mb-4">Chỉnh sửa loại phòng</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="TenLoai" class="form-label"></label>
                <input asp-for="TenLoai" class="form-control" />
                <span asp-validation-for="TenLoai" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="GiaPhong" class="form-label"></label>
                <input asp-for="GiaPhong" class="form-control" />
                <span asp-validation-for="GiaPhong" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="MoTa" class="form-label"></label>
                <textarea asp-for="MoTa" class="form-control" rows="6" placeholder="Nhập mô tả chi tiết từng đặc điểm, mỗi dòng 1 mục..."></textarea>

                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="HinhAnh" class="form-label"></label>
                <input asp-for="HinhAnh" class="form-control" type="file" name="hinhAnhFiles" multiple />

                <span asp-validation-for="HinhAnh" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">💾 Lưu</button>
            <a asp-action="Index" class="btn btn-secondary ms-2">↩️ Quay lại</a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
