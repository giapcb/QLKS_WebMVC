@model IEnumerable<QLKS_WebMVC.Models.LoaiPhong>

@{
    ViewData["Title"] = "Danh sách loại phòng";
}

<h2 class="mb-4 fw-bold">Danh sách loại phòng</h2>

<p>
    <a asp-action="Create" class="btn btn-success mb-3">➕ Thêm loại phòng mới</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        var images = item.HinhAnh?.Split(';', StringSplitOptions.RemoveEmptyEntries).Select(i => i.Trim()).ToList() ?? new List<string>();
        var firstImage = images.FirstOrDefault();
        var secondImage = images.Skip(1).FirstOrDefault();
        var thirdImage = images.Skip(2).FirstOrDefault();

        <div class="col-md-12 col-lg-6 mb-4">
            <div class="border rounded shadow-sm overflow-hidden" style="min-height: 280px;">
                <div class="row g-0">
                    <div class="col-md-5">
                        @if (!string.IsNullOrEmpty(firstImage))
                        {
                            <img src="~/images/@firstImage" class="img-fluid w-100 h-100 object-fit-cover" alt="Ảnh đại diện">
                        }
                        else
                        {
                            <img src="~/images/noimage.jpg" class="img-fluid w-100 h-100 object-fit-cover" alt="No image">
                        }
                        <div class="d-flex p-1 gap-1 border-top bg-light">
                            @if (!string.IsNullOrEmpty(secondImage))
                            {
                                <img src="~/images/@secondImage" style="width: 60px; height: 40px; object-fit: cover;" class="rounded" />
                            }
                            @if (!string.IsNullOrEmpty(thirdImage))
                            {
                                <img src="~/images/@thirdImage" style="width: 60px; height: 40px; object-fit: cover;" class="rounded" />
                            }
                        </div>
                    </div>

                    <div class="col-md-7 p-3">
                        <h5 class="text-primary">@item.TenLoai</h5>
                        <p class="mb-1"><strong>Giá:</strong> <span class="text-danger">@item.GiaPhong.ToString("N0") VNĐ / đêm</span></p>
                        <p class="text-muted" style="white-space: pre-line; font-size: 0.95rem;">
                            @Html.Raw(item.MoTa?.Replace("\n", "<br>"))
                        </p>

                        <div class="mt-3 d-flex justify-content-start gap-2">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm">🔍 Xem chi tiết</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">✏️ Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">🗑️ Xoá</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .object-fit-cover {
        object-fit: cover;
    }
</style>

