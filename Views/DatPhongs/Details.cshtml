@model QLKS_WebMVC.Models.DatPhong
@{
    ViewData["Title"] = "Chi tiết đơn đặt phòng";
}
<div class="container mt-4" style="font-family: 'Segoe UI', sans-serif">
    <h2 class="text-info mb-4">🔍 Chi tiết đặt phòng</h2>
    <dl class="row">
        <dt class="col-sm-3">Khách hàng</dt>
        <dd class="col-sm-9">@Model.KhachHang?.HoTen</dd>

        <dt class="col-sm-3">Phòng</dt>
        <dd class="col-sm-9">@Model.MaPhong</dd>

        <dt class="col-sm-3">Ngày đặt</dt>
        <dd class="col-sm-9">@Model.NgayDat.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Ngày nhận</dt>
        <dd class="col-sm-9">@Model.NgayNhan.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Ngày trả</dt>
        <dd class="col-sm-9">@Model.NgayTra.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Trạng thái</dt>
        <dd class="col-sm-9">
            <span class="badge bg-@(Model.TrangThai == "Đã đặt" ? "info" : "success")">@Model.TrangThai</span>
        </dd>
    </dl>
    <a asp-action="Edit" asp-route-id="@Model.MaDat" class="btn btn-warning">✏ Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">↩ Quay lại</a>
</div>