@model QLKS_WebMVC.Models.DatPhong
@{
    ViewData["Title"] = "Xoá đơn đặt phòng";
}
<div class="container mt-4" style="font-family: 'Segoe UI', sans-serif">
    <h2 class="text-danger mb-4">🗑 Xoá đơn đặt phòng</h2>
    <div class="alert alert-warning">
        Bạn có chắc chắn muốn xoá đơn đặt phòng của <strong>@Model.KhachHang?.HoTen</strong> không?
    </div>
    <dl class="row">
        <dt class="col-sm-3">Phòng</dt>
        <dd class="col-sm-9">@Model.MaPhong</dd>

        <dt class="col-sm-3">Ngày nhận</dt>
        <dd class="col-sm-9">@Model.NgayNhan.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Ngày trả</dt>
        <dd class="col-sm-9">@Model.NgayTra.ToString("dd/MM/yyyy")</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="MaDat" />
        <button type="submit" class="btn btn-danger">🗑 Xác nhận xoá</button>
        <a asp-action="Index" class="btn btn-secondary">↩ Huỷ</a>
    </form>
</div>